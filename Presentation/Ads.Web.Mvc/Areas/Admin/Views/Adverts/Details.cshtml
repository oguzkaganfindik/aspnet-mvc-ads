                                            int currentItem = 0;

                                            foreach (var categoryAdvert in Model.CategoryAdverts)
                                            {
                                                currentItem++;
                                                @categoryAdvert.Category?.Name

                                                if (currentItem < totalItems)
                                                {
                                                    <span> - </span>
                                                }
                                            }
                                        }
