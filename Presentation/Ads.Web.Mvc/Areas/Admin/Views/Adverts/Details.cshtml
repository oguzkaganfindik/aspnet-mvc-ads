                                                <th>Username</th>
                                                <th>Comment</th>
                                                <th>Commented Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var comment in Model.AdvertComments)
