@model Ads.Domain.Entities.Concrete.Setting

@{
    ViewData["Title"] = "Add Setting";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Setting</h1>

<h4>Setting</h4>
