@model Ads.Domain.Entities.Concrete.SubCategory

@{
    ViewData["Title"] = "SubCategory Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>SubCategory Edit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="SubCategoryIconPath" />
            <div class="form-group">
                <label asp-for="SubCategoryIconPath" class="control-label"></label>
                <input asp-for="SubCategoryIconPath" class="form-control" type="file" />
                <span asp-validation-for="SubCategoryIconPath" class="text-danger"></span>
                <br />
                <img src="/Img/SubCategoryIconImages/@Model.SubCategoryIconPath" alt="" height="75" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary mt-2" asp-action="Index">Back to List</a>
</div>

