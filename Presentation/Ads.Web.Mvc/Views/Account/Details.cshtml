@using Ads.Application.ViewModels;
@model EditUserViewModel

@{
    ViewData["Title"] = "My User Information";
}

<section class="user-profile section">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
                <div class="sidebar">
                    <!-- User Widget -->
                    <div class="widget user">
                        <!-- User Image -->
                        <div class="image d-flex justify-content-center">
                            <img src="/Img/UserImages/@Model.UserEditDto.UserImagePath" alt="" class="">
                        </div>
                        <!-- User Name -->
                        <h5 class="text-center">@Model.UserEditDto.FirstName</h5>
                    </div>
                    <!-- Dashboard Links -->
                    <div class="widget dashboard-links">
                        <ul>
                            <li><a class="my-1 d-inline-block" href="">Savings Dashboard</a></li>
                            <li><a class="my-1 d-inline-block" href="">Saved Offer <span>(5)</span></a></li>
                            <li><a class="my-1 d-inline-block" href="">Favourite Stores <span>(3)</span></a></li>
                            <li><a class="my-1 d-inline-block" href="">Recommended</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
                <!-- Edit Profile Welcome Text -->
                <div class="widget welcome-message">
                    <h2>Edit profile</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
                </div>
                <!-- Edit Personal Info -->
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="widget personal-info">
                            <h3 class="widget-header user">Edit Personal Information</h3>
                            <form asp-controller="Account" asp-action="UserUpdate" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UserEditDto.Id" />
                                <input type="hidden" asp-for="UserEditDto.RoleId" />
                                <input type="hidden" asp-for="UserEditDto.Email" />
                                <!-- User Name -->
                                <div class="form-group">
                                    <span asp-validation-for="UserEditDto.UserName" class="text-danger"></span>
                                    <label for="first-name" class="control-label">User Name</label>
                                    <input type="text" asp-for="UserEditDto.UserName" class="form-control" id="first-name" />
                                </div>
                                <!-- First Name -->
                                <div class="form-group">
                                    <span asp-validation-for="UserEditDto.FirstName" class="text-danger"></span>
                                    <label for="first-name" class="control-label">First Name</label>
                                    <input type="text" asp-for="UserEditDto.FirstName" class="form-control" id="first-name" />
                                </div>
                                <!-- Last Name -->
                                <div class="form-group">
                                    <span asp-validation-for="UserEditDto.LastName" class="text-danger"></span>
                                    <label for="last-name">Last Name</label>
                                    <input type="text" asp-for="UserEditDto.LastName" class="form-control" id="last-name" />
                                </div>
                                <!-- Phone -->
                                <div class="form-group">
                                    <span asp-validation-for="UserEditDto.Phone" class="text-danger"></span>
                                    <label asp-for="UserEditDto.Phone" class="control-label"></label>
                                    <input asp-for="UserEditDto.Phone" class="form-control" />
                                </div>

                                <!-- Adress -->
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <input type="text" asp-for="UserEditDto.Address" class="form-control" id="Address" />
                                </div>
                                <!-- File chooser -->
                                <label asp-for="File" class="control-label"></label>
                                <div class="form-group choose-file d-inline-flex">
                                    <i class="fa fa-user text-center px-3"></i>
                                    <input asp-for="File" class="form-control-file mt-2 pt-1" type="file" id="input-file" />

                                </div>
                                <!-- IsActive -->
                                <div class="form-group form-check">
                                    <label class="form-check-label" for="hide-profile">
                                        <input class="form-check-input" asp-for="UserEditDto.IsActive" /> @Html.DisplayNameFor(model => model.UserEditDto.IsActive)
                                        Hide Profile from Public/Comunity
                                    </label>
                                </div>
                                <!-- Submit button -->
                                <input type="submit" value="Save My Changes" class="btn btn-transparent" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>