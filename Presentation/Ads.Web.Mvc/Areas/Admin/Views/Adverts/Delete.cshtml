@using Ads.Application.DTOs.Advert
@model AdvertDto

@{
    ViewData["Title"] = "Advert Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutNested.cshtml";
}

<h1>Advert Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Advert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @if (Model.CategoryAdverts != null && Model.CategoryAdverts.Any())
            {
                @string.Join(", ", Model.CategoryAdverts.Select(ca => ca.Category.Name))
            }
            else
            {
                <text>No Category</text>
            }
        </dd>
        <dt class="col-sm-2">
            Sub Category Name
        </dt>
        <dd class="col-sm-10">
            @if (Model.SubCategoryAdverts != null && Model.SubCategoryAdverts.Any())
            {
                @string.Join(", ", Model.SubCategoryAdverts.Select(sca => sca.SubCategory.Name))
            }
            else
            {
                <text>No SubCategory</text>
            }
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OnSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OnSale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClickCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClickCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedDate)
        </dd>

    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </form>
</div>
