@model Ads.Application.DTOs.Category.CategoryDto

@{
    ViewData["Title"] = "Category Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutNested.cshtml";
}

@section Styles {
    <style>
        .form-group label {
            margin-right: 15px;
            display: block;
        }

            .form-group label i {
                margin-right: 5px;
            }

        .icon-radio {
            display: inline-block;
            margin-right: 10px;
            font-size: 24px;
            cursor: pointer;
        }
    </style>
}

<h1>Category Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Categories" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group">
                <label asp-for="CategoryIcon" class="control-label">Kategori İkonu</label>
                <div>
                    <!-- İkon seçenekleri radio butonlarla gösteriliyor -->
                    @foreach (var icon in new[] { "fa fa-user", "fa fa-envelope", "fa fa-laptop" })
                    {
                        <label class="icon-radio">
                            <input type="radio" name="CategoryIcon" value="@icon"
                            @(Model.CategoryIcon == icon ? "checked=\"checked\"" : "") />
                            <i class="@icon"></i>
                        </label>
                    }
                    <!-- Diğer ikon seçenekleri -->
                </div>
            </div>



            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary mt-2">Back to List</a>
</div>
