@using Ads.Application.DTOs.User
@model LoginDto

@{
    ViewData["Title"] = "User Login";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4">Login Now</h3>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <fieldset class="p-4">
                            <input asp-for="Email" class="border p-3 w-100 my-2" placeholder="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>

                            <input asp-for="Password" class="border p-3 w-100 my-2" placeholder="Password" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                            <div class="loggedin-forgot">

                            <input type="checkbox" id="keep-me-logged-in" asp-for="RememberMe">
                            <label for="keep-me-logged-in" class="pt-3 pb-2">Keep me logged in</label>
                            </div>
                            <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Log in</button>
                            <a class="mt-3 d-block  text-primary" asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                            <a class="mt-3 d-inline-block text-primary" href="register">Register Now</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>