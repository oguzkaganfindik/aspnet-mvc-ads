@using Ads.Application.DTOs.Advert
@model IEnumerable<AdvertDto>

@{
    ViewData["Title"] = "Adverts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Adverts Management</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">You can perform @ViewData["Title"] management operations on this page.</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Advert Images
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                SubCategory
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                On Sale
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Advert Rating
                            </th>
                            <th>
                                ClickCount
                            </th>
                            <th>
                                Comments
                            </th>
                            <th>
                                CreatedDate
                            </th>
                            <th>
                                UpdatedDate
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                Advert Images
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                SubCategory
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                On Sale
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Advert Rating
                            </th>
                            <th>
                                ClickCount
                            </th>
                            <th>
                                Comments
                            </th>
                            <th>
                                CreatedDate
                            </th>
                            <th>
                                UpdatedDate
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>

                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                        @foreach (var image in item.AdvertImages)
                                        {
                                        <img src="/Img/AdvertImages/@image.AdvertImagePath" alt="" width="75" height="75" />
                                        }
                                </td>
                                <td>
                                    @if (item.User != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.User.Username)
                                    }
                                    else
                                    {
                                        <text>No User</text>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>

                                    @if (ViewBag.CategoryId != null)
                                    {
                                        var categoryId = item.CategoryId.ToString();
                                        var categoryList = ViewBag.CategoryId as SelectList;
                                        var categoryItem = categoryList?.FirstOrDefault(x => x.Value == categoryId);

                                        if (categoryItem != null)
                                        {
                                            @categoryItem.Text
                                        }
                                        else
                                        {
                                            <text>No Category</text>
                                        }
                                    }
                                    else
                                    {
                                        <text>No CategoryId List</text>
                                    }
                                </td>
                                <td>
                                    @if (ViewBag.SubCategoryId != null)
                                    {
                                        var subCategoryId = item.SubCategoryId.ToString();
                                        var subCategoryList = ViewBag.SubCategoryId as SelectList;
                                        var subCategoryItem = subCategoryList?.FirstOrDefault(x => x.Value == subCategoryId);

                                        if (subCategoryItem != null)
                                        {
                                            @subCategoryItem.Text
                                        }
                                        else
                                        {
                                            <text>No SubCategory</text>
                                        }
                                    }
                                    else
                                    {
                                        <text>No SubCategoryId List</text>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OnSale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    
                                    @if (item.AdvertRatings != null && item.AdvertRatings.Any()) //dto mappingden sonra burası güncellenecek
                                    {
                                        var averageRating = (int)item.AdvertRatings.Average(r => r.Rating ?? 0);
                                        <div class="star-rating" data-rating="@averageRating">
                                            @for (int i = 1; i <= averageRating; i++)
                                            {
                                                <span>&#9733;</span> <!-- Yıldız sembolü -->
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <text>Puan Yok</text>
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ClickCount)
                                </td>
                                <td>
                                    @if (item.AdvertComments != null && item.AdvertComments.Any())
                                    {
                                        foreach (var comment in item.AdvertComments)
                                        {
                                            <div>
                                                @Html.DisplayFor(modelItem => comment.Comment)
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <text>No Comments</text>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    <tbody>
                </table>
            </div>
        </div>
    </div>
</main>