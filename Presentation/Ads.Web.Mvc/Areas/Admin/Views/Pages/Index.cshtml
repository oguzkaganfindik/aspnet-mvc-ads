@model IEnumerable<Ads.Application.DTOs.Page.PageDto>

@{
    ViewData["Title"] = "Page Management";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Pages Management</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">You can perform @ViewData["Title"] management operations on this page.</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
                <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Settings" asp-action="Index">Go back to Settings</a>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                Page Image
                            </th>
                            <th>
                                Page Name
                            </th>
                            <th>
                                Page Visibility
                            </th>
                            <th>
                                Title 1
                            </th>
                            <th>
                                Content 1
                            </th>
                            <th>
                                Title 2
                            </th>
                            <th>
                                Content 2
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Updated Date
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                Page Image
                            </th>
                            <th>
                                Page Name
                            </th>
                            <th>
                                Page Visibility
                            </th>
                            <th>
                                Title 1
                            </th>
                            <th>
                                Content 1
                            </th>
                            <th>
                                Title 2
                            </th>
                            <th>
                                Content 2
                            </th>
                            <th>
                                Created Date
                            </th>
                            <th>
                                Updated Date
                            </th>

                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="/Img/PageImages/@item.PageImagePath" alt="" height="250" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Setting.Value)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                                </td>

                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>