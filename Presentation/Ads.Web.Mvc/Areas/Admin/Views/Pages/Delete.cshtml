@model Ads.Application.DTOs.Page.PageDto

@{
    ViewData["Title"] = "Delete Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutNested.cshtml";
}
<link href="~/assets/vendor/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />
<h1>Delete Page</h1>

<h3>Are you sure you want to delete this page?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PageImagePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Setting.Value)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Setting.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title1)
        </dd>       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title2)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrWhiteSpace(Model.Title2))
            {
                <span class="text-muted">Not specified</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Title2)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content2)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrWhiteSpace(Model.Content2))
            {
                <span class="text-muted">Not specified</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Content2)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.UpdatedDate == null)
            {
                <span class="text-muted">Not specified</span>
            }
            else
            {
                @Html.DisplayFor(model => model.UpdatedDate)
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" id="deleteForm">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-danger" id="deleteButton">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script src="~/assets/vendor/libs/sweetalert2/sweetalert2.js"></script>

<script>
    document.querySelector('#deleteButton').addEventListener('click', function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                document.querySelector('#deleteForm').submit();
            }
        });
    });
</script>